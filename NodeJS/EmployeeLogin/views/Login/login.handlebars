<link rel="stylesheet" href="/css/login.css" />
<!-- Created By CodingNepal -->
<body>
  <div class="bg-img">
    <div class="content">
      {{> msg}}
      <form action="/login" method="POST">
        <div class="field">
          <span class="fa fa-user"></span>
          <input
            type="text"
            id="email"
            name="email"
            required
            placeholder="Email"
          />
        </div>
        <div class="field space">
          <span class="fa fa-lock"></span>
          <input
            type="password"
            name="password"
            id="password"
            class="pass-key"
            required
            placeholder="Password"
          />
          <span class="show">SHOW</span>
        </div>
        <div class="pass">
          <a href="/forgot">Forgot Password?</a>
        </div>
        <div class="field">
          <input type="submit" value="LOGIN" />
        </div>
      </form>
      <div class="signup">
        Don't have an account?
        <br />
        <a href="/register">Register a new one Now</a>
      </div>
    </div>
  </div>
  <script>
    const pass_field = document.querySelector(".pass-key"); const showBtn
    =document.querySelector(".show"); showBtn.addEventListener("click", function
    () { if (pass_field.type === "password") { pass_field.type = "text";
    showBtn.textContent = "HIDE"; showBtn.style.color = "#3498db"; } else {
    pass_field.type = "password"; showBtn.textContent = "SHOW";
    showBtn.style.color = "#222"; } });
  </script>
</body>